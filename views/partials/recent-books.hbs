<div class="" data-aos="fade-right" data-aos-duration="1000">
    <h4>Recent Books</h4>
    <div class="row">
        {{#if books.length}}
        {{#each books}}
        <div class="col-md-2 mb-2">
            <div class="card">
                <a href="/book/{{this.id}}" class="text-decoration-none">
                    <img src="/img/{{this.image}}" class="card-img-top" alt="{{this.title}}"
                        style="height: 100px; object-fit: contain; display: block; margin: auto;">
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                    </div>
                </a>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div class="col-12 text-center">
            <p>You dont have any recent book. Request one book! :)</p>
        </div>
        {{/if}}
    </div>

</div>