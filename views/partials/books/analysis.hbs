<div class="analysis-sections"  data-aos="fade-right" data-aos-duration="1000">
        <div class="card mb-3">
        <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-people"></i> Key Characters</h5>
        </div>
        <div class="card-body">
                {{#if analysis.characters}}
                <ul class="list-group">
                {{#each analysis.characters}}
                <li class="list-group-item">{{this}}</li>
                {{/each}}
                </ul>
                {{/if}}
        </div>
        </div>

        <div class="card mb-3">
        <div class="card-header">
                <h5 class="mb-0">   <i class="bi bi-translate"></i>  Language Detection</h5>
        
        </div>
        <div class="card-body">
                <p>{{analysis.language}}</p>
        </div>
        </div>

        <div class="card mb-3">
        <div class="card-header">
                <h5 class="mb-0">  <i class="bi bi-emoji-smile"></i> Sentiment Analysis</h5>
        
        </div>
        <div class="card-body">
                <div class="progress">
                <div class="progress-bar bg-danger" role="progressbar"
                        style="width: {{analysis.sentiment.negative}}%"
                        aria-valuenow="{{analysis.sentiment.negative}}" aria-valuemin="0"
                        aria-valuemax="100">
                        {{analysis.sentiment.negative}}%
                </div>
                <div class="progress-bar bg-warning" role="progressbar"
                        style="width: {{analysis.sentiment.neutral}}%"
                        aria-valuenow="{{analysis.sentiment.neutral}}" aria-valuemin="0"
                        aria-valuemax="100">
                        {{analysis.sentiment.neutral}}%
                </div>
                <div class="progress-bar bg-success" role="progressbar"
                        style="width: {{analysis.sentiment.positive}}%"
                        aria-valuenow="{{analysis.sentiment.positive}}" aria-valuemin="0"
                        aria-valuemax="100">
                        {{analysis.sentiment.positive}}%
                </div>
                </div>
        </div>
        </div>

        <div class="card mb-3">
        <div class="card-header">
                <h5 class="mb-0"> <i class="bi bi-book"> </i> _Plot Summary</h5>
        
        </div>
        <div class="card-body">
                <p>{{analysis.plotSummary}}</p>
        </div>
        </div>
</div>

<style>
        .bi {
                margin-right: 5px;
        }
</style>